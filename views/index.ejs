<% include ./partials/header %>

<h1>Index Page</h1>

<% blogs.forEach((blog) => { %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>" alt="<%= blog.title %>">
        <span><%= blog.created %></span>
        <p><%= blog.body.substring(0, 100) %></p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
        <a href="/blogs/<%= blog._id %>/edit">Edit</a>
    </div>
<% }); %>

<% include ./partials/footer %>